{
    "name": "sonos-bullshit-bridge",
    "version": "1.0.0",
    "main": "./src/index.ts",
    "type": "module",
    "scripts": {
        "dev": "tsx --env-file=.env --watch ./src/index.ts",
        "build:old": "tsc",
        "bundle": "esbuild src/index.ts --minify --external:sharp --bundle --platform=node --format=esm --banner:js=\"import { createRequire } from 'module'; import { fileURLToPath } from 'url'; import { dirname } from 'path'; const require = createRequire(import.meta.url); const __filename = fileURLToPath(import.meta.url); const __dirname = dirname(__filename);\" --outfile=dist/bundle.mjs",
        "start": "node dist/index.mjs",
        "prod": "node dist/bundle.mjs",
        "build": "pkgroll --minify --clean-dist",
        "postinstall": "patch-package"
    },
    "author": "",
    "license": "Apache-2.0",
    "description": "",
    "dependencies": {
        "@hono/node-server": "^1.13.8",
        "@svrooij/sonos": "^2.6.0-beta.11",
        "fluent-ffmpeg": "^2.1.3",
        "hono": "^4.7.2",
        "patch-package": "^8.0.0",
        "pkgroll": "^2.10.0",
        "sharp": "^0.33.5",
        "typescript": "^5.7.3",
        "yt-cast-receiver": "^2.0.0",
        "ytdlp-nodejs": "^2.3.5"
    },
    "devDependencies": {
        "@types/fluent-ffmpeg": "^2.1.27",
        "esbuild": "^0.25.0",
        "tsx": "^4.19.3"
    },
    "exports": "./dist/index.mjs"
}
